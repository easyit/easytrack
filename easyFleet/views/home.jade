extends layout

block scripts
	script(src='/js/views/home.js')
	script(src='/js/controllers/logoutController.js')
	link(rel='stylesheet', href='/lib/dataTables/media/css/jquery.dataTables.css')
	script(src='/lib/dataTables/media/js/jquery.dataTables.min.js')

	script(language="javascript", type="text/javascript", src="/lib/flot/jquery.flot.js")
	script(language="javascript", type="text/javascript", src="/lib/flot/jquery.flot.pie.js")
	script(language="javascript", type="text/javascript", src="/lib/flot/jquery.flot.resize.js")
	script(language="javascript", type="text/javascript", src="/lib/flot/jquery.flot.stack.js")


block content
	include menu
	- user = typeof(udata) != 'undefined' ? udata : {}
	div.container
		div.row
			include dashboard/vehicles
		hr
		div.row
			div.box
				div.heading 
					img(src='images/home.png') Dashboard
				div.content

					div.overview
						div.dashboard-heading Top 10 Speed Violation Count
						div.dashboard-content(style="height: 235px;")
							table#top_overspeed_table.table.table-striped.table-bordered
								thead
									tr
										th Vehicle 
										th Driver
										th Count
								tbody
									tr
										td WHV0128
										td Dharma
										td 76
									tr
										td WHV0129
										td Jone
										td 58
									tr
										td WHV0187
										td Mike
										td 47

								
					div.statistic
						div.dashboard-heading Vehicle Polling Status
						div.dashboard-content
							div#interactive.piegraph(style="height: 235px;")
							div#hover(style="width:50%;padding-left:20%;")

					div.overview
						div.dashboard-heading Violation Count Graph
						div.dashboard-content
							div#dbViolationGraph(style="height: 235px;")
							div#legendholder2(style="width:50%;padding-left:20%;")

					div.statistic
						div.dashboard-heading Violation Summary
						div.dashboard-content
							div#dbViolationSummary(style="height: 190px;")
							div#legendholder(style="width:50%;padding-left:20%;")
						

	include modals/alert
	include modals/confirm

